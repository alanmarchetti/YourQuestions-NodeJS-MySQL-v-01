<div class="container">
    <div class="card" id="form-question">
        <div class="card-header">
            <h3>Faça sua pergunta</h3>
        </div>
        <div class="card-body">
            <form action="/savedquestion" method="POST">
                <label for="title">Titulo</label>
                
                <input type="text" name="title" class="form-control" placeholder="Titulo">
                <br>
                <label for="description">Descrição</label>
               
                <textarea name="description" placeholder="Descreva sua pergunta" class="form-control" ></textarea>
                <br>
                <button class="btn btn-color">Perguntar</button>     
            </form>
        </div>
    </div>
</div>

